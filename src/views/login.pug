extends layout.pug

block content
  .py-4
    form(action='/login', method='post')
      h5.text-center.mb-4 Login
      .row
        .form-group.col-md-6
          label(for='email') Email address
          input#email.form-control(type='email', name="email", placeholder='name@example.com')
        .form-group.col-md-6
          label(for='password') Password
          input#password.form-control(type='password', name="password", placeholder='********')
      button.btn.btn-success.mt-4(type='submit') Login
  .py-4
    a(href=`https://github.com/login/oauth/authorize?client_id=${clientID}&redirect_uri=http://localhost:3000/oauth/redirect`)
